{
  "name": "gmail-appscript",
  "version": "1.0.0",
  "description": "Gmail AppScript management repository",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.14.0"
  },
  "scripts": {
    "push": "clasp push",
    "pull": "clasp pull",
    "deploy": "clasp deploy",
    "logs": "clasp logs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "validate": "node scripts/validate-configs.js",
    "check:pnpm": "node scripts/check-pnpm.js",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verlyn13/gmail-appscript.git"
  },
  "keywords": [
    "gmail",
    "google-apps-script",
    "automation"
  ],
  "author": "verlyn13",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^3.0.6-alpha",
    "@types/google-apps-script": "^1.0.99",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "only-allow": "^1.2.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
