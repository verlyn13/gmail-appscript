{
  "name": "gmail-appscript",
  "version": "1.0.0",
  "description": "Gmail AppScript management repository",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.14.0"
  },
  "scripts": {
    "push": "clasp push",
    "pull": "clasp pull",
    "deploy": "clasp deploy",
