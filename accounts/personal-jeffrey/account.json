      "enabled": true,
      "rules": [
        {
          "from": "*@github.com",
          "label": "GitHub"
        },
        {
          "from": "*@linkedin.com",
          "label": "LinkedIn"
        }
      ]
    }
  },
  "preferences": {
    "notifications": {
      "dailySummary": true,
      "errorAlerts": true
    },
    "cleanup": {
      "deleteSpam": true,
      "emptyTrash": true,
      "frequency": "weekly"
    }
  }
